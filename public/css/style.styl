radiusAll($size){
    -webkit-border-radius: $size;
    -moz-border-radius: $size;
    border-radius: $size;
}

body {
	padding: 0 5px;
}

#container {
	max-width:750px;
	margin:0 auto;
}


.app-title,
.app-title:hover {
	color:#FFF;
}

.talks {
	.talk {

		margin:0 auto;
		position:relative;
		margin-bottom:30px;
		padding-bottom:15px;

		.label {
			position:absolute;
			top:15px;
			right:15px;
		}

		img {
			float:left;
			margin-right:15px;
			width:200px;
			height:200px;
			radiusAll(200px);
		}

		.presenter {
			color:#e8d069;
			font-family: "Cabin",Arial,sans-serif;
		}

		.btn {
			width:200px;
			position:relative;
			left:50%;
			margin-left:-100px;
			text-transform:uppercase;
		}

		.description {
			font-size:15px;
		}
	}
}

.page-talk {
	margin:0 2%;
	
	.header {
		width:100%;
		padding-bottom:30px;

		.thumb {
			width:100%;
			max-width:300px;
			radiusAll(300px);
			float:left;
			margin-right:30px;
		}

		.presenter {
			color:#e8d069;
			font-family: "Cabin",Arial,sans-serif;
		}
	}

	.grid-timeline {
		max-width: 500px;
		margin:0 auto;

		textarea {
			width: 100%;
			height: 78px;
			resize:none;
		}

		button {
			float:right;
		}

		.submit-post {
			margin-right:15px;
		}

		.timeline {
			list-style:none;
			margin:0;
			padding:0;

			li {
				display:block;
				width:100%;
				background:#13a0aa;
				padding:15px;
				margin-bottom:5px;
			}
		}
	}
}